@model IEnumerable<Shop.Data.Models.Car>

@{
	ViewData["Title"] = "Добавление файла";
}
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Load" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label>Модель</label>
		<div class="col-md-5">
			<input name="Car.Name" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label>Цена</label>
		<div class="col-md-5">
			<input name="Car.Price" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label>Краткое описание</label>
		<div class="col-md-5">
			<input name="Car.ShortDesc" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label>Отображать на главной странице</label>
		<select name="Car.IsFavourite">
			<option value="true">Да</option>
			<option value="false">Нет</option>
		</select>
	</div>
	<div class="form-group">
		<label>Загрузить фото</label>
		<input name="File" type="file" />
	</div>
	<div>
		<label>Категория</label>
		<select name="CategoryName">
			<option value="Электромобили">Электромобили</option>
			<option value="Классические автомобили">Классические автомобили</option>
		</select>
	</div>
	<div class="form-group">
		<input class="btn btn-success" type="submit" value="Завершить заказ" />
	</div>
</form>
